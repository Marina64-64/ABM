# Application Settings
APP_NAME=reCAPTCHA Automation Framework
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_KEY=your-secret-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./data/recaptcha.db
# For PostgreSQL: postgresql://user:password@localhost:5432/recaptcha
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=recaptcha_tasks

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# Browser Automation
BROWSER_TYPE=chromium
HEADLESS=True
BROWSER_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=30000

# Proxy Configuration
# IPv4 Proxy
PROXY_IPV4_HOST=
PROXY_IPV4_PORT=
PROXY_IPV4_USER=
PROXY_IPV4_PASSWORD=

# IPv6 Proxy
PROXY_IPV6_HOST=
PROXY_IPV6_PORT=
PROXY_IPV6_USER=
PROXY_IPV6_PASSWORD=

# Proxy Pool (comma-separated)
PROXY_POOL=

# Task 1 Configuration
TARGET_SITE_URL=https://example.com
AUTOMATION_RUNS=250
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# Task 3 Configuration
SCRAPING_TARGET_URL=https://target-site.com
EXTRACT_ALL_IMAGES=True
EXTRACT_VISIBLE_ONLY=True
IMAGE_FORMAT=base64

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
FLOWER_PORT=5555

# Security
SECRET_KEY=your-secret-key-for-jwt-signing
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Performance
MAX_CONCURRENT_TASKS=50
TASK_TIMEOUT=300
WORKER_CONCURRENCY=4

# Output Paths
OUTPUT_DIR=data/output
LOGS_DIR=data/logs
RESULTS_DIR=data/results
